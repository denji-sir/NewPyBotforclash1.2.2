# ===== ОБЯЗАТЕЛЬНЫЕ ПАРАМЕТРЫ =====

# Токен Telegram бота (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# Токены Clash of Clans API (получить на https://developer.clashofclans.com/)
# Рекомендуется использовать несколько токенов для увеличения лимита запросов
CLASH_TOKEN=your_primary_clash_token_here
CLASH_TOKEN_2=your_second_clash_token_here
CLASH_TOKEN_3=your_third_clash_token_here

# Альтернативный способ - все токены через запятую
# CLASH_TOKENS=token1,token2,token3,token4,token5

# ID администраторов бота (через запятую)
ADMIN_USER_IDS=123456789,987654321

# Database Configuration
# PostgreSQL для production
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cocbot
# SQLite для разработки (раскомментировать для local разработки)
# DATABASE_URL=sqlite+aiosqlite:///./data/database/bot.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./data/logs/bot.log
LOG_FORMAT=json
ENABLE_CONSOLE_LOGGING=true

# Scheduler Configuration
SCHEDULER_TIMEZONE=Europe/Moscow
UPDATE_INTERVAL_MINUTES=30
WAR_CHECK_INTERVAL_MINUTES=15
CAPITAL_CHECK_INTERVAL_MINUTES=60

# API Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT_PER_SECOND=10
CACHE_TTL_SECONDS=300

# Monitoring and Metrics
SENTRY_DSN=your_sentry_dsn_here
ENABLE_METRICS=true
METRICS_PORT=8000
HEALTH_CHECK_PORT=8080

# Bot Behavior Configuration
MAX_CLANS_PER_PASSPORT=5
VERIFICATION_TOKEN_LIFETIME_HOURS=24
NOTIFICATION_BATCH_SIZE=50
MAX_SEARCH_RESULTS=50

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_PROFILING=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./data/backups/

# Security Configuration
ENCRYPT_SENSITIVE_DATA=true
API_KEY_ROTATION_DAYS=90
SESSION_TIMEOUT_MINUTES=1440

# Feature Flags
ENABLE_PASSPORT_SYSTEM=true
ENABLE_NOTIFICATIONS=true
ENABLE_WAR_MONITORING=true
ENABLE_CAPITAL_MONITORING=true
ENABLE_RANKINGS=true
ENABLE_EXTENDED_STATS=true